<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/hiruPanelGehitu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1"
        android:textSize="22sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/hiruPanelText"
        app:layout_constraintEnd_toEndOf="@+id/resetGeneral" />

    <TextView
        android:id="@+id/batPanelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="2dp"
        android:text="0"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/batPanelGehitu"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/batPanelReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:text="RESET"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/hiruPanelText"
        app:layout_constraintEnd_toStartOf="@+id/hiruPanelText" />

    <Button
        android:id="@+id/batPanelGehitu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="+1"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/hiruPanelReset"
        app:layout_constraintStart_toEndOf="@+id/batPanelText"
        app:layout_constraintTop_toTopOf="@+id/batPanelReset" />

    <TextView
        android:id="@+id/countTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="270dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="29dp"
        android:text="0"
        android:textSize="28sp"
        app:layout_constraintEnd_toStartOf="@+id/resetGeneral"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/lauPanelGehitu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="+1"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@+id/hiruPanelGehitu"
        app:layout_constraintTop_toBottomOf="@+id/hiruPanelGehitu" />

    <Button
        android:id="@+id/biPanelGehitu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="+1"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@+id/batPanelGehitu"
        app:layout_constraintTop_toBottomOf="@+id/batPanelGehitu" />

    <Button
        android:id="@+id/resetGeneral"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginEnd="241dp"
        android:text="RESET ALL"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/countTotal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/countTotal" />

    <TextView
        android:id="@+id/biPanelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="2dp"
        android:text="0"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/biPanelGehitu"
        app:layout_constraintEnd_toStartOf="@+id/biPanelGehitu" />

    <Button
        android:id="@+id/lauPanelReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="RESET"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@+id/hiruPanelReset"
        app:layout_constraintTop_toBottomOf="@+id/hiruPanelReset" />

    <Button
        android:id="@+id/hiruPanelReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="2dp"
        android:text="RESET"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/hiruPanelGehitu"
        app:layout_constraintTop_toTopOf="@+id/hiruPanelGehitu" />

    <TextView
        android:id="@+id/hiruPanelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="16dp"
        android:text="0"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/hiruPanelGehitu"
        app:layout_constraintTop_toBottomOf="@+id/resetGeneral" />

    <TextView
        android:id="@+id/lauPanelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:text="0"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/lauPanelGehitu"
        app:layout_constraintEnd_toStartOf="@+id/lauPanelGehitu" />

    <Button
        android:id="@+id/biPanelReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="RESET"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/batPanelReset"
        app:layout_constraintTop_toBottomOf="@+id/batPanelReset" />

</androidx.constraintlayout.widget.ConstraintLayout>